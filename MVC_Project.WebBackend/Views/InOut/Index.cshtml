@model  MVC_Project.WebBackend.Models.InOutViewModel

@{
    ViewBag.Title = "Listas In & Out";
}
@section styles {
    @Styles.Render("~/plugins/dataTablesStyles")
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title d-flex justify-content-between">
                    <h5>Resultados</h5>
                    <div>
                        <button type="button" class="btn btn-info btn-xs">
                            <i class="fa fa-file-download mr-1" aria-hidden="true"></i> Descargar Plantilla
                        </button>
                        <a href="@Url.Action("Import", "InOut")" class="btn btn-secondary btn-xs">
                            <i class="fa fa-upload mr-1" aria-hidden="true"></i> Importar
                        </a>
                        <button type="button" class="btn btn-primary btn-xs">
                            <i class="fa fa-plus mr-1" aria-hidden="true"></i> Crear
                        </button>
                    </div>
                </div>
                <div class="ibox-content clearfix">
                    <div class="table-responsive">
                        <table id="table" class="table table-striped table-bordered table-hover"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/custom/Utils")
    <script src="~/Scripts/views/InOut/Index.js"></script>
    <script type="text/javascript">
        $(function () {
            const tableCtrl = new InOutIndexControlador('table', '@Url.Action("GetAll")', '@Url.Action("Detail")');
            tableCtrl.init();
        });
    </script>

}
