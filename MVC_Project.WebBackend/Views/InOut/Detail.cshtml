@model  MVC_Project.WebBackend.Models.DetailInOutViewModel

@{
    ViewBag.Title = "Listas In & Out - Detalle";
}
@section styles {
    @Styles.Render("~/plugins/dataTablesStyles")
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title d-flex justify-content-between">
                    <h5>Lista @Model.Id - @Model.Cedis</h5>
                </div>
                <div class="ibox-content clearfix">
                    <div class="table-responsive">
                        <table id="table" class="table table-striped table-bordered table-hover"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/custom/Utils")
    <script src="~/Scripts/views/InOut/Detail.js"></script>
    <script type="text/javascript">
        $(function () {
            const tableCtrl = new InOutDetailControlador('table', '@Url.Action("GetProducts", new { id = Model.Id })');
            tableCtrl.init();
        });
    </script>

}
