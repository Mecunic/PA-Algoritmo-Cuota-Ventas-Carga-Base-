@model  IEnumerable<MVC_Project.WebBackend.Models.PredefinedListProductViewModel>

<div class="table-responsive">
    <table id="productsTable" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sku)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PackageUnit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Sku</td>
                    <td>@product.Description</td>
                    <td>@product.PackageUnit</td>
                    <td>@product.StartDate.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                    <td>@product.EndDate.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>