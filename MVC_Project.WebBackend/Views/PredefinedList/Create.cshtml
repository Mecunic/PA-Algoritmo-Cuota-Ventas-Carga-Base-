@model MVC_Project.WebBackend.Models.CreatePredefinedListViewModel
@using MVC_Project.WebBackend.Models
@{
    ViewBag.Title = "Listas Predefinidas | Crear";
}

@section styles {
    @Styles.Render("~/plugins/dataTablesStyles")
    @Styles.Render("~/plugins/datePickerStyles")
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title d-flex justify-content-between">
                    <h5>Crear Lista</h5>
                </div>
                <div class="ibox-content clearfix">
                    @using (Html.BeginForm("Create", "PredefinedList", FormMethod.Post, new { id = "create-form" }))
                    {
                        <div class="row">
                            <div class="col-sm-4 col-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Cedis)
                                    <select class="form-control m-b" name="@Html.IdFor(m => m.Cedis)">
                                        <option value="1">CEDIS 1</option>
                                        <option value="2">CEDIS 2</option>
                                        <option value="3">CEDIS 3</option>
                                        <option value="4">CEDIS 4</option>
                                    </select>
                                    @Html.ValidationMessageFor(m => m.Cedis)
                                </div>
                            </div>
                            <div class="col-sm-4 col-12">
                                @Html.LabelFor(m => m.StartDate)
                                <div class="input-group date start-date-picker">
                                    @Html.TextBoxFor(m => m.StartDate, "{0:dd/MM/yyyy}", new { @class = "form-control start-date-inputbox date", autocomplete = "off" })
                                    <div class="input-group-append align-items-center px-2 bg-muted">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(x => x.StartDate, "", new { @class = "font-bold text-danger" })
                            </div>
                            <div class="col-sm-4 col-12">
                                @Html.LabelFor(m => m.EndDate)
                                <div class="input-group date end-date-picker">
                                    @Html.TextBoxFor(m => m.EndDate, "{0:dd/MM/yyyy}", new { @class = "form-control end-date-inputbox date", autocomplete = "off" })
                                    <div class="input-group-append align-items-center px-2 bg-muted">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(x => x.EndDate, "", new { @class = "font-bold text-danger" })
                            </div>
                        </div>
                        <div class="row border-top pt-3">
                            @{ Html.RenderPartial("_ItemForm", new CreateProductPredefinedListViewModel(), new ViewDataDictionary
                                                                                {
                                                                                   { "ProductsOptions", Model.Products }
                                                                                });
                            }
                        </div>
                    }
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table id="table" class="table table-striped table-bordered table-hover"></table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/validateUnobtrusive")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/datePicker")
    @Scripts.Render("~/custom/Utils")
    <script src="~/Scripts/views/PredefinedList/Create.js"></script>

    <script type="text/javascript">
        $(function () {
            const createController = new PredefinedListCreateControlador('table', '@Url.Action("Create")');
            createController.init();
        });
    </script>

}

