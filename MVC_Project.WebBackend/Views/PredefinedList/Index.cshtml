@model  MVC_Project.WebBackend.Models.InOutViewModel

@{
    ViewBag.Title = "Listas Predefinidas";
}
@section styles {
    @Styles.Render("~/plugins/dataTablesStyles")
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm("", "", FormMethod.Get, new { @id = "SearchForm" }))
                {
                    <div class="ibox-title">
                        <h5>Búsqueda</h5>
                    </div>
                    <div class="ibox-content clearfix">
                        <div class="row">
                            <div class="col-12 col-md-4 d-flex align-items-start justify-content-between mt-2 pt-4">
                                <div class="form-check form-check-inline i-checks">
                                    <input type="checkbox" name="StatusFilter" id="StatusFilter" class="form-check-input" />
                                    <label for="StatusFilter" class="form-check-label ml-2">Mostrar Historico</label>
                                </div>
                            </div>

                            <div class="col-6 offset-lg-6 text-right">
                                <span>
                                    <button type="button" id="btnSearchForm" class="btn btn-sm btn-primary btn-filter"><i class="fas fa-search"></i> Buscar</button>
                                    &nbsp;
                                    <button type="button" id="btnClearSearchForm" class="btn btn-sm btn-default"><i class="fas fa-eraser "></i> Limpiar</button>
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title d-flex justify-content-between">
                    <h5>Resultados</h5>
                    <div>
                        <button type="button" class="btn btn-info btn-xs">
                            <i class="fa fa-file-download mr-1" aria-hidden="true"></i> Descargar Plantilla
                        </button>
                        <a href="@Url.Action("Import", "PredefinedList")" class="btn btn-secondary btn-xs">
                            <i class="fa fa-upload mr-1" aria-hidden="true"></i> Importar
                        </a>
                        <a href="@Url.Action("Create", "PredefinedList")" class="btn btn-primary btn-xs">
                            <i class="fa fa-plus mr-1" aria-hidden="true"></i> Crear
                        </a>
                    </div>
                </div>
                <div class="ibox-content clearfix">
                    <div class="table-responsive">
                        <table id="table" class="table table-striped table-bordered table-hover"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/custom/Utils")
    <script src="~/Scripts/views/PredefinedList/Index.js"></script>
    <script type="text/javascript">
        $(function () {
            const tableCtrl = new PredefinedListIndexControlador('table', '@Url.Action("GetAll")', '@Url.Action("Detail")');
            tableCtrl.init();
        });
    </script>

}
