@using MVC_Project.WebBackend.AuthManagement
@using MVC_Project.WebBackend.AuthManagement.Models
@{
    AuthUser user = (AuthUser)Authenticator.AuthenticatedUser;
}

<nav class="navbar-default navbar-static-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav metismenu" id="side-menu">
            <li class="nav-header">
                <div class="dropdown profile-element">
                    @*<img alt="logo" class="rounded-circle" src="~/Images/logos/logo_icon.png" />*@
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <span class="block m-t-xs font-bold">@user.FirstName</span>
                        <span class="text-muted text-xs block">@user.Role.Name<b class="caret"></b></span>
                    </a>
                    <ul class="dropdown-menu animated fadeInRight m-t-xs">
                        <li><a class="dropdown-item" href="@Url.Action("Logout", "Auth")">@ViewLabels.AUTH_LOGOUT</a></li>
                    </ul>
                </div>
                <div class="logo-element">
                    IN+
                </div>
            </li>

            @if (user.HasAccessToModule("admin"))
            {
                <li class="@Html.IsModuleSelected(user, "admin")">
                    <a href="#"><i class="fa fa-th-large"></i> <span class="nav-label" data-i18n="nav.dashboard">@ViewLabels.MODULE_MANAGEMENT</span> <span class="fain arrow"></span></a>
                    @if (user.HasAccessController("User"))
                    {
                        <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "User", cssClass: "in")">
                            <li class="@Html.IsSelected(controller: "User",action: "Index")"><a href="@Url.Action("Index", "User")">Usuarios</a></li>
                        </ul>
                        <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "Productos", cssClass: "in")">
                            <li class="@Html.IsSelected(controller: "Productos",action: "Index")"><a href="@Url.Action("Index", "Productos")">Productos</a></li>
                        </ul>
                    }
                    @*@if (user.HasAccessController("Role"))
                        {
                            <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "User", cssClass: "in")">
                                <li class="@Html.IsSelected(controller: "Role",action: "Index")"><a href="@Url.Action("Index", "Role")">Roles</a></li>
                            </ul>
                        }*@
                </li>
            }

            @if (user.HasAccessToModule("fees"))
            {
                <li class="@Html.IsModuleSelected(user, "fees")">
                    <a href="#"><i class="fa fa-calendar"></i> <span class="nav-label" data-i18n="nav.dashboard">Cálculo de Cuotas</span> <span class="fain arrow"></span></a>
                    <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "Fees", cssClass: "in")">
                        <li class="@Html.IsSelected(action: "Calculate")"><a href="@Url.Action("Calculate", "Fees")">Parámetros</a></li>
                        <li class="@Html.IsSelected(action: "Tracking")"><a href="@Url.Action("Tracking", "Fees")">Seguimiento</a></li>
                        <li class="@Html.IsSelected(action: "Tweaking")"><a href="@Url.Action("Tweaking", "Fees")">Ajustes</a></li>
                    </ul>
                </li>
            }

            @if (user.HasAccessToModule("charges"))
            {
                <li class="@Html.IsModuleSelected(user, "charges")">
                    <a href="#"><i class="fa fa-calendar"></i> <span class="nav-label" data-i18n="nav.dashboard">C&aacute;lculo de Cargas</span> <span class="fain arrow"></span></a>
                    <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "Fee", cssClass: "in")">
                        <li class="@Html.IsSelected(action: "Index")"><a href="@Url.Action("Index", "Charges")">Par&aacute;metros</a></li>
                    </ul>
                </li>
            }

            @if (user.HasAccessToModule("cedis"))
            {
                <li class="@Html.IsModuleSelected(user, "cedis")">
                    <a href="#"><i class="fa fa-calendar"></i> <span class="nav-label" data-i18n="nav.dashboard">CEDIs</span> <span class="fain arrow"></span></a>
                    <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "Cedis", cssClass: "in")">
                        <li class="@Html.IsSelected(action: "Index")"><a href="@Url.Action("Index", "Cedis")">Administración</a></li>
                    </ul>
                </li>
            }

            @if (user.HasAccessToModule("inout"))
            {
                <li class="@Html.IsModuleSelected(user, "inout")">
                    <a href="#"><i class="fa fa-calendar"></i> <span class="nav-label" data-i18n="nav.dashboard">Listas In & Out</span> <span class="fain arrow"></span></a>
                    <ul class="nav nav-second-level collapse @Html.IsSelected(controller: "InOut", cssClass: "in")">
                        <li class="@Html.IsSelected(action: "Index")"><a href="@Url.Action("Index", "InOut")">Administración</a></li>
                    </ul>
                </li>
            }

        </ul>
    </div>
</nav>
