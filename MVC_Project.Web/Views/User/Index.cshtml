@model  IEnumerable<MVC_Project.Web.Models.UserViewModel>

@{
	ViewBag.Title = "Administración de Usuarios";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm("SearchUsers", "User", FormMethod.Post, new { @id = "SearchForm", role = "form" }))
                {
                    <div class="ibox-title">
                        <h5>Búsqueda</h5>
                    </div>
                    <div class="ibox-content clearfix">
                        <div class="col-xs-4">
                            <div class="form-group">
                                <label>Nombre o correo electrónico</label>
                                <input class="form-control m-" />
                            </div>
                        </div>

                        <div class="col-xs-4">
                            <div class="form-group">
                                <label>Estado</label>
                                <select class="form-control m-b">
                                    <option>Todos</option>
                                    <option selected>Activo</option>
                                    <option>Inactivo</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-xs-4">
                            <br />
                            <button class="btn btn-primary" onclick="javascript:sendSearchForm();"><span class="fas fa-search"></span>&nbsp;Buscar</button>
                        </div>
                    </div>
                }
            </div>
        </div>

            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Resultado</h5>
                        <div class="ibox-tools">
                            <a href="@Url.Action("Create","User")" class="btn btn-primary"><span class="fas fa-plus-square"></span>Crear Nuevo</a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-striped">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedAt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedAt)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedAt)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.Uuid }, new { @class = "btn btn-primary btn-sm" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.Uuid }, new { @class = "btn btn-white btn-sm" })
                                        @Html.ActionLink("Desactivar", "Delete", new { id = item.Uuid }, new { @class = "btn btn-white btn-sm" })
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
             
            </div>
        </div>
    </div>
</div>
