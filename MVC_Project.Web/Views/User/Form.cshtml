@model MVC_Project.Web.Models.UserCreateViewModel

@{
    ViewBag.Title = "Crear Usuario";
}
@section Scripts {
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/validate")
}
@section Styles {
    @Styles.Render("~/Content/template/plugins/chosen/chosenStyles")
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Crear</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Usuarios", "Index")
            </li>
            <li class="active">
                <strong>Crear</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar al listado", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Crear Usuario</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "CreateForm" }))
                    {

                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Apellidos, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Apellidos)
                                    @Html.ValidationMessageFor(model => model.Apellidos)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Email, new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Password, new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Role, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.Role, Model.Roles, "Seleccione un rol", new { @class = "chosen-select", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Role)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="button" value="Crear" class="btn btn-primary" onclick="validarDatos();" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $.validator.addMethod("PasswordTrue",
            function (value, element) {
                return value.match(/^(?=.*\d)(?=.*\W+)(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$/);
            }, "La contraseña debe contener al menos un número, mayúsculas, minúsculas y caracteres especiales"
        );
        $("#CreateForm").validate({
            rules: {
                Name: {
                    required: true,
                },
                Email: {
                    required: true,
                },
                Password: {
                    PasswordTrue: true,
                    required: true,
                    minlength: 8
                },
                Role: {
                    required: true,
                },
            }
            ,
            messages: {
                Name: {
                    required: "Campo obligatorio",
                },
                Email: {
                    required: "Campo obligatorio",
                },
                Password: {
                    required: "Campo obligatorio",
                    minlength: "La contraseña debe ser mínimo de 8 caracteres",
                },
                Role: {
                    required: "Campo obligatorio",
                },
            }
        })
    });
    function validarDatos() {
        if (!$('#CreateForm').valid()) {
            //$("form#recupera-cuenta-form").find('span').removeClass("help-block").css("display", "none");
            return;
        }
        $('#CreateForm').submit();
    }
</script>
