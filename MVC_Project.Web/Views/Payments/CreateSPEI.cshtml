@model  MVC_Project.Web.Models.PaymentViewModel
@{
    ViewBag.Title = "Pago con SPEI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">

            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Pago con Transferencia InterBancaria (SPEI)</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <h3 class="m-t-none m-b">Capture los datos</h3>
                            @using (Html.BeginForm("CreateSPEI", "Payments", FormMethod.Post, new { @id = "CreateForm", @role = "form" }))
                            {
                            <div class="form-group">
                                <label>ID Orden / Transacción (Única)</label>
                                @Html.TextBoxFor(m => m.OrderId, new { @class = "form-control", placeholder = "ID Orden / Transacción", @required = "required" })
                            </div>
                                <div class="form-group">
                                    <label>Monto</label>
                                    <input type="number" name="Amount" required="required" placeholder="Monto" class="form-control" autocomplete="off">
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-primary float-right m-t-n-xs" type="submit"><strong>Pagar</strong></button>
                                </div>
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Id))
                        {
                        <div class="col-sm-6">
                            <b>ID Transacción:</b> @Html.Raw(Model.Id)
                            <br />
                            <b>ID Orden:</b> @Html.Raw(Model.OrderId)
                            <br />
                            <b>Monto:</b> @Html.Raw(Model.Amount)
                            <br />
                            <b>Fecha de Vencimiento:</b> @Html.Raw(Model.DueDate)
                            <br />
                            <b>Ficha de Pago:</b> <a href="@Html.Raw(Model.PaymentCardURL)" target="_blank" class="btn btn-block">Descarga</a>
                            <br />
                        </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

